from src.data_preprocessing import load_data, preprocess_data
from src.model_training import train_model, evaluate_model
from src.utils import save_model

# Load and preprocess data
df = load_data('../data/reviews.csv')
X_train, X_test, y_train, y_test, vectorizer = preprocess_data(
    df, text_column='review', target_column='sentiment'
)

# Train model
model = train_model(X_train, y_train, model_type='LogisticRegression')

# Evaluate model
evaluate_model(model, X_test, y_test)

# Save model and vectorizer
save_model(model, vectorizer, '../models/sentiment_model.pkl', '../models/vectorizer.pkl')
